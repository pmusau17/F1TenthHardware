<!-- -*- mode: XML -*- -->
<launch>
  <!-- launch script arguments -->
  <arg name="racecar_version" default="racecar-v2" />
  <arg name="bag"/>
  <arg name="rate" default="1.0"/>

  <include file="$(find racecar)/launch/replay_bag_file/replay_bag_file.launch">
    <arg name="bag" value="$(arg bag)" />
    <arg name="rate" value="$(arg rate)" />
  </include>

  <include file="$(find racecar)/launch/includes/$(arg racecar_version)/static_transforms.launch.xml" />

  <!-- laser scan matching -->
  <node pkg="laser_scan_matcher" type="laser_scan_matcher_node" 
        name="laser_scan_matcher_node" output="screen">

    <!-- prevent tf interference between laser_scan_matcher and odom->base_link  -->
    <param name="publish_tf"                           value="false" />
    <param name="publish_pose"                         value="true" />
    <param name="publish_pose_stamped"                 value="true" />
    <param name="publish_pose_with_covariance"         value="false" />
    <param name="publish_pose_with_covariance_stamped" value="false" />
    
    <param name="use_imu" value="false" />
    <param name="use_odom" value="false" />
    <param name="use_vel" value="false" />
    <param name="kf_dist_linear" value="0" />
    <param name="kf_dist_angular" value="0" />
  </node>

  <!-- publish world->odom transformation per the laser scan matching output -->
  <node pkg="racecar" type="correct_odom.py"
	name="correct_odom_node" output="screen" />
  
<!--
  <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf" output="screen">
    <remap from="imu_data" to="imu" />
    <param name="odom_used" value="false" />
    <param name="imu_used" value="true" />
    <param name="vo_used" value="false" />
    <param name="gps_used" value="false" />
  </node>
-->
  <node pkg="rviz" type="rviz" name="rviz" 
        args="-d $(find racecar)/rviz/laser_scan_matcher.rviz" />

</launch>
