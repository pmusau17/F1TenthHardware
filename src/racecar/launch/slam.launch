<?xml version="1.0"?>
<launch>
<!--launch gmapping version of slam from ros-->
   <node pkg="gmapping" type="slam_gmapping" name="gmapping">
       <param name="map_frame" value="map"/>
       <param name="base_frame" value="base_link"/>
       <param name="odom_frame" value="/zed/zed_node/camera_odom" />
       <param name="delta" value="0.08" />
       <param name="maxUrange" value="10.0" />
       <param name="linearUpdate" value="0.03" />
       <param name="angularUpdate" value="0.03"/>
       <param name="maxRange" value="10.0" />
       <param name="map_update_interval" value="3.0"/>
       <param name="iterations" value="5"/>
   </node>
   <!--<node pkg="tf" type="static_transform_publisher" name="base_link_laser_broadcaster" args="0.265 0 0.125 0 0 0 base_link laser 100"/>-->
